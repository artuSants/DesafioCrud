@model ContatoModel
@{
    ViewData["Title"] = "Registar Dados";
}

<div class="text-center">

    <h1 class="display-4">Registrar Dados</h1>

</div>

<form asp-controller="Contato" asp-action="Criar" method="post"> 

    <div class="form-group">
        <label for="nome1">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Insira o Nome">
        @Html.ValidationMessageFor(x => x.Nome)  
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Insira o Email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Insira o Celular">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>

